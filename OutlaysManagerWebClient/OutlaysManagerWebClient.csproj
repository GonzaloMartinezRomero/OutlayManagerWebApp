<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AngularClientRoot>clientAngular</AngularClientRoot>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="clientAngular\src\app\views\dateSelector.component.ts" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.3.5">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Update="clientAngular\src\app\views\calendar\calendar.component.ts">
      <SubType>Code</SubType>
    </TypeScriptCompile>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\img\" />
  </ItemGroup>

  <Target Name="PublishAngularBuilder" BeforeTargets="BeforePublish">
    <Exec WorkingDirectory="$(AngularClientRoot)" Command="ng build --configuration production" />
  </Target>
  
</Project>
